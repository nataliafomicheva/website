---
import author from "../data/author.json";
import "@fontsource-variable/inter";
import interWoff2 from "@fontsource-variable/inter/files/inter-cyrillic-wght-normal.woff2?url";

export interface Props {
    title: string;
    description: string;
    keywords: string;
}

const isTesting = import.meta.env.MODE === "testing";

const { title, description, keywords } = Astro.props;

const authorContent = `${author.name}, ${author.role}. Contact: ${author.email}, ${author.website}`;
---

<head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    {isTesting && <meta content="noindex, nofollow" name="robots" />}
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content={description} name="description" />
    <meta content={authorContent} name="author" />
    <meta content={keywords} name="keywords" />
    <link
        as="font"
        crossorigin="anonymous"
        href={interWoff2}
        rel="preload"
        type="font/woff2"
    />
</head>
